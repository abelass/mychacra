		</BOUCLE_devs2>	
			<BOUCLE_devs3(ARTICLES)  {traduction}{origine_traduction}{id_trad !IN #GET{id_trad}}>	[(#ID_TRAD|!={0}|oui)#SET_MERGE{id_trad,#GET{id_trad},#ARRAY{#COMPTEUR_BOUCLE,#ID_TRAD}}]
			#SET_MERGE{id_article,#GET{id_article},#ARRAY{#COMPTEUR_BOUCLE,#ID_ARTICLE}}
			</BOUCLE_devs3>														
		<//B_devs2>
	<//B_devs>			
	</BOUCLE_art>					
</BOUCLE_articles_sel>

