	#SET_MERGE{id_article,#GET{id_article},#ARRAY{#COMPTEUR_BOUCLE,#ID_ARTICLE}}										
	</BOUCLE_devs>	
		<BOUCLE_devs2(ARTICLES)  {traduction}{id_trad !IN #GET{id_trad}}{lang}>	[(#ID_TRAD|!={0}|oui)#SET_MERGE{id_trad,#GET{id_trad},#ARRAY{#COMPTEUR_BOUCLE,#ID_TRAD}}]
